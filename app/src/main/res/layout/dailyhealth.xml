<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dailyhealth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE"
    android:fitsSystemWindows="true"
    tools:context=".DailyActivity">

    //點選每日健康和附近活動的框框
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/healthtab_layout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="19dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日健康狀況" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近活動" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDD6DA"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/househome"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/chathome"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:src="@drawable/chatbubble" />

        <ImageView
            android:id="@+id/helphome"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:src="@drawable/help" />

        <ImageView
            android:id="@+id/dailyhome"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:src="@drawable/timetable" />

        <ImageView
            android:id="@+id/profilehome"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/profileuser" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
