<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/request_header"
        android:layout_width="81dp"
        android:layout_height="33dp"
        android:text="請求確認"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/request_underheader"
        android:layout_width="323dp"
        android:layout_height="67dp"
        android:text="您要「同意」與對方配對，才能與對方聊天與通話！"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="79dp" />

    <View
        android:id="@+id/request_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_header"
        app:layout_constraintVertical_bias="0.029" />

    <ImageView
        android:id="@+id/request_image_3"
        android:layout_width="119dp"
        android:layout_height="131dp"
        android:background="@drawable/rounded_corners"
        android:scaleType="centerCrop"
        android:src="@drawable/request_person3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_image_2"
        app:layout_constraintVertical_bias="0.273" />

    <ImageView
        android:id="@+id/request_image_1"
        android:layout_width="121dp"
        android:layout_height="126dp"
        android:background="@drawable/rounded_corners"
        android:scaleType="centerCrop"
        android:src="@drawable/request_person1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_separator"
        app:layout_constraintVertical_bias="0.272" />

    <ImageView
        android:id="@+id/request_image_2"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:background="@drawable/rounded_corners"
        android:scaleType="centerCrop"
        android:src="@drawable/request_person2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_image_1"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/request_name1"
        android:layout_width="81dp"
        android:layout_height="33dp"
        android:text="黃阿瑪"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/request_name2"
        android:layout_width="81dp"
        android:layout_height="33dp"
        android:text="周水水"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="363dp" />

    <TextView
        android:id="@+id/request_name3"
        android:layout_width="81dp"
        android:layout_height="33dp"
        android:text="鵬大海"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="531dp" />

    <Button
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:text="拒絕"
        android:backgroundTint="@android:color/holo_red_light"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="拒絕"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="420dp" />

    <Button
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="拒絕"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="578dp" />

    <Button
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:text="同意"
        android:backgroundTint="@android:color/holo_green_light"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="同意"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="420dp" />

    <Button
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="同意"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="578dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
