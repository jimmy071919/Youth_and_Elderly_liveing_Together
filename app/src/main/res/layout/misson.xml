<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homemission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE"
    android:fitsSystemWindows="true"
    tools:context=".HelpActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的委託"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/commission_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水管不通需要幫忙!"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="28dp" />

    <TextView
        android:id="@+id/commission_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024/5/7"
        app:layout_constraintTop_toBottomOf="@id/commission_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="125dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/commission_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="桃園市中壢區"
        app:layout_constraintTop_toTopOf="@id/commission_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp" />

    <TextView
        android:id="@+id/commission_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贈送點數:5點"
        app:layout_constraintTop_toBottomOf="@id/commission_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/commission_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看"
        android:textSize="30sp"
        android:background="#FA8072"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/commission_points"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
